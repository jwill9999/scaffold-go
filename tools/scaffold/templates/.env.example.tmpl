# Application
APP_ENV=development
APP_PORT=8080
APP_NAME={{.Name}}
APP_VERSION=1.0.0

# Database
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=app
DB_PORT=5432

# Redis
REDIS_PORT=6379

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Docker
TARGET=builder  # Use 'builder' for development, 'final' for production

# JWT
JWT_SECRET=your-secret-key
JWT_EXPIRATION=24h

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json  # json or text

# API
RATE_LIMIT=100  # requests per minute
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080 